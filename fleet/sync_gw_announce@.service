[Unit]
Description=Announce Sync Gateway
BindsTo=sync_gw_node@%i.service
After=sync_gw_node@%i.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/cbfs/sync_gw_node@%i '{ \"host\": \"%H\"}' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/cbfs/sync_gw_node@%i

[X-Fleet]
MachineOf=sync_gw_node@%i.service